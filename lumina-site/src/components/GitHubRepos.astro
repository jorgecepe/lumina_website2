---
// Componente para mostrar repositorios de GitHub
// Por defecto muestra repos públicos, puedes personalizar el username

interface Props {
  username?: string;
  maxRepos?: number;
}

const { username = 'jorgecepe', maxRepos = 6 } = Astro.props;

let repos = [];
let error = null;

try {
  const response = await fetch(`https://api.github.com/users/${username}/repos?sort=updated&per_page=${maxRepos}`);
  if (response.ok) {
    repos = await response.json();
  } else {
    error = 'No se pudieron cargar los repositorios';
  }
} catch (e) {
  error = 'Error al conectar con GitHub';
  console.error('Error fetching GitHub repos:', e);
}
---

<div class="github-repos">
  {error ? (
    <div class="bg-red-100 text-red-700 p-4 rounded-lg">
      <p>{error}</p>
    </div>
  ) : repos.length > 0 ? (
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {repos.map((repo: any) => (
        <a
          href={repo.html_url}
          target="_blank"
          rel="noopener noreferrer"
          class="block bg-white border-2 border-lumina-blue/20 rounded-lg p-6 hover:border-lumina-accent hover:shadow-lg transition-all duration-200"
        >
          <div class="flex items-start justify-between mb-3">
            <h3 class="text-lg font-semibold text-lumina-navy flex-1">
              {repo.name}
            </h3>
            {repo.stargazers_count > 0 && (
              <div class="flex items-center gap-1 text-sm text-lumina-slate">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
                <span>{repo.stargazers_count}</span>
              </div>
            )}
          </div>

          <p class="text-sm text-lumina-slate mb-4 line-clamp-2">
            {repo.description || 'Sin descripción'}
          </p>

          <div class="flex items-center gap-4 text-xs text-lumina-slate">
            {repo.language && (
              <div class="flex items-center gap-1">
                <span class="w-3 h-3 rounded-full bg-lumina-accent"></span>
                <span>{repo.language}</span>
              </div>
            )}
            {repo.updated_at && (
              <span>
                Actualizado: {new Date(repo.updated_at).toLocaleDateString('es-CL')}
              </span>
            )}
          </div>
        </a>
      ))}
    </div>
  ) : (
    <div class="text-center py-12 bg-gray-100 rounded-lg">
      <p class="text-lumina-slate">No hay repositorios públicos disponibles</p>
    </div>
  )}
</div>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
