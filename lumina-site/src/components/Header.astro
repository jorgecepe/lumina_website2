---
const currentPath = Astro.url.pathname;
---

<header class="bg-white shadow-sm sticky top-0 z-50">
  <nav class="container-custom py-4">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-2">
        <img src="/logo-wide-horizontal.svg" alt="Lumina Consulting" class="h-10 w-auto" />
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <a
          href="/"
          class={`hover:text-lumina-bright-blue transition-colors ${currentPath === '/' ? 'text-lumina-bright-blue font-semibold' : 'text-lumina-dark-gray'}`}
        >
          Inicio
        </a>
        <a
          href="/acerca-de"
          class={`hover:text-lumina-bright-blue transition-colors ${currentPath === '/acerca-de' ? 'text-lumina-bright-blue font-semibold' : 'text-lumina-dark-gray'}`}
        >
          Acerca de
        </a>
        <a
          href="/servicios"
          class={`hover:text-lumina-bright-blue transition-colors ${currentPath === '/servicios' ? 'text-lumina-bright-blue font-semibold' : 'text-lumina-dark-gray'}`}
        >
          Servicios
        </a>
        <a
          href="/casos-de-exito"
          class={`hover:text-lumina-bright-blue transition-colors ${currentPath === '/casos-de-exito' ? 'text-lumina-bright-blue font-semibold' : 'text-lumina-dark-gray'}`}
        >
          Casos de Éxito
        </a>
        <a
          href="https://nodaltree.luminaconsulting.ai"
          target="_blank"
          rel="noopener noreferrer"
          class="hover:text-lumina-bright-blue transition-colors text-lumina-dark-gray"
        >
          Productos ↗
        </a>
        <a
          href="/contacto"
          class={`hover:text-lumina-bright-blue transition-colors ${currentPath === '/contacto' ? 'text-lumina-bright-blue font-semibold' : 'text-lumina-dark-gray'}`}
        >
          Contacto
        </a>
        <a
          href="https://wa.me/56991629095?text=Hola,%20me%20interesa%20conocer%20más%20sobre%20los%20servicios%20de%20Lumina%20Consulting"
          target="_blank"
          class="btn-primary"
        >
          WhatsApp
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="md:hidden text-lumina-navy"
        aria-label="Abrir menú"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4 space-y-4">
      <a href="/" class="block hover:text-lumina-bright-blue transition-colors">Inicio</a>
      <a href="/acerca-de" class="block hover:text-lumina-bright-blue transition-colors">Acerca de</a>
      <a href="/servicios" class="block hover:text-lumina-bright-blue transition-colors">Servicios</a>
      <a href="/casos-de-exito" class="block hover:text-lumina-bright-blue transition-colors">Casos de Éxito</a>
      <a
        href="https://nodaltree.luminaconsulting.ai"
        target="_blank"
        rel="noopener noreferrer"
        class="block hover:text-lumina-bright-blue transition-colors"
      >
        Productos ↗
      </a>
      <a href="/contacto" class="block hover:text-lumina-bright-blue transition-colors">Contacto</a>
      <a
        href="https://wa.me/56991629095?text=Hola,%20me%20interesa%20conocer%20más%20sobre%20los%20servicios%20de%20Lumina%20Consulting"
        target="_blank"
        class="btn-primary block text-center"
      >
        WhatsApp
      </a>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');

  button?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
