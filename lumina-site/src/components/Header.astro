---
const currentPath = Astro.url.pathname;
// Normalize path: remove trailing slash except for root
const normalizedPath = currentPath === '/' ? '/' : currentPath.replace(/\/$/, '');
const isEnglish = normalizedPath.startsWith('/en');
const lang = isEnglish ? 'en' : 'es';

// Complete URL mapping between ES and EN
const urlMap: Record<string, string> = {
  // Main pages
  '/': '/en',
  '/en': '/',
  '/acerca-de': '/en/about',
  '/en/about': '/acerca-de',
  '/servicios': '/en/services',
  '/en/services': '/servicios',
  '/recursos': '/en/resources',
  '/en/resources': '/recursos',
  '/blog': '/en/blog',
  '/en/blog': '/blog',
  '/casos-de-exito': '/en/case-studies',
  '/en/case-studies': '/casos-de-exito',
  '/faq': '/en/faq',
  '/en/faq': '/faq',
  '/contacto': '/en/contact',
  '/en/contact': '/contacto',

  // Service pages
  '/servicios/dashboards-estrategicos': '/en/services/strategic-dashboards',
  '/en/services/strategic-dashboards': '/servicios/dashboards-estrategicos',
  '/servicios/hr-analytics': '/en/services/hr-analytics',
  '/en/services/hr-analytics': '/servicios/hr-analytics',
  '/servicios/automatizacion-reporteria': '/en/services/reporting-automation',
  '/en/services/reporting-automation': '/servicios/automatizacion-reporteria',
  '/servicios/analisis-competencia': '/en/services/competitive-analysis',
  '/en/services/competitive-analysis': '/servicios/analisis-competencia',
  '/servicios/capacitacion-sence': '/en/services/data-training',
  '/en/services/data-training': '/servicios/capacitacion-sence',

  // Blog posts
  '/blog/como-elegir-kpis-pyme': '/en/blog/how-to-choose-kpis',
  '/en/blog/how-to-choose-kpis': '/blog/como-elegir-kpis-pyme',
  '/blog/errores-dashboards-evitar': '/en/blog/dashboard-mistakes-avoid',
  '/en/blog/dashboard-mistakes-avoid': '/blog/errores-dashboards-evitar',
  '/blog/hr-analytics-primeros-pasos': '/en/blog/hr-analytics-getting-started',
  '/en/blog/hr-analytics-getting-started': '/blog/hr-analytics-primeros-pasos',
  '/blog/automatizacion-reporteria-roi': '/en/blog/reporting-automation-roi',
  '/en/blog/reporting-automation-roi': '/blog/automatizacion-reporteria-roi',

  // Resources pages
  '/recursos/glosario': '/en/resources/glossary',
  '/en/resources/glossary': '/recursos/glosario',
  '/recursos/guias/power-bi-pymes': '/en/resources/guides/power-bi-smbs',
  '/en/resources/guides/power-bi-smbs': '/recursos/guias/power-bi-pymes',
  '/recursos/comparativas/power-bi-vs-looker': '/en/resources/comparisons/power-bi-vs-looker',
  '/en/resources/comparisons/power-bi-vs-looker': '/recursos/comparativas/power-bi-vs-looker',
};

// Get the equivalent path in the other language
const getAlternatePath = () => {
  // First check if we have an exact mapping
  if (urlMap[normalizedPath]) {
    return urlMap[normalizedPath];
  }

  // Fallback: try to intelligently switch language
  if (isEnglish) {
    // Remove /en prefix and go to Spanish home if no mapping
    const esPath = normalizedPath.replace(/^\/en/, '') || '/';
    return urlMap[`/en${esPath === '/' ? '' : esPath}`] ? urlMap[`/en${esPath === '/' ? '' : esPath}`] : '/';
  } else {
    // Add /en prefix and go to English home if no mapping
    return urlMap[normalizedPath] || '/en';
  }
};

const navLinks = isEnglish ? [
  { href: '/en', label: 'Home' },
  { href: '/en/about', label: 'About' },
  { href: '/en/services', label: 'Services' },
  { href: '/en/resources', label: 'Resources' },
  { href: '/en/blog', label: 'Blog' },
  { href: '/en/case-studies', label: 'Cases' },
  { href: '/en/faq', label: 'FAQ' },
  { href: 'https://nodaltree.luminaconsulting.ai', label: 'NodalTree', external: true },
  { href: '/en/contact', label: 'Contact' },
] : [
  { href: '/', label: 'Inicio' },
  { href: '/acerca-de', label: 'Nosotros' },
  { href: '/servicios', label: 'Servicios' },
  { href: '/recursos', label: 'Recursos' },
  { href: '/blog', label: 'Blog' },
  { href: '/casos-de-exito', label: 'Casos' },
  { href: '/faq', label: 'FAQ' },
  { href: 'https://nodaltree.luminaconsulting.ai', label: 'NodalTree', external: true },
  { href: '/contacto', label: 'Contacto' },
];

const ctaText = isEnglish ? "Let's talk" : 'Hablemos';
const ctaTextMobile = isEnglish ? 'Contact via WhatsApp' : 'Contactar por WhatsApp';
const menuAriaLabel = isEnglish ? 'Open menu' : 'Abrir menú';
---

<header class="fixed top-0 left-0 right-0 z-50 transition-all duration-300" id="main-header">
  <div class="container-custom">
    <nav class="flex items-center justify-between py-4 border-b-2 border-transparent transition-all duration-300">
      <!-- Logo -->
      <a href={isEnglish ? '/en' : '/'} class="flex items-center group">
        <img
          src="/logo-wide.svg"
          alt="Lumina Consulting"
          class="h-16 w-auto transition-transform duration-300 group-hover:translate-x-1"
        />
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center gap-6">
        <div class="flex items-center gap-1">
          {navLinks.map((link, index) => (
            <a
              href={link.href}
              target={link.external ? '_blank' : undefined}
              rel={link.external ? 'noopener noreferrer' : undefined}
              class:list={[
                'nav-link px-3 py-2 text-sm',
                currentPath === link.href && 'active'
              ]}
            >
              {link.label}
              {link.external && (
                <svg class="inline-block w-3 h-3 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              )}
            </a>
          ))}
        </div>

        <!-- Language Selector -->
        <div class="flex items-center border-l border-lum-slate/20 pl-4">
          <a
            href={getAlternatePath()}
            class="flex items-center gap-1.5 px-2 py-1 text-sm rounded hover:bg-lum-cream transition-colors"
            title={isEnglish ? 'Cambiar a Español' : 'Switch to English'}
          >
            <svg class="w-4 h-4 text-lum-slate" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span class="font-medium">{isEnglish ? 'ES' : 'EN'}</span>
          </a>
        </div>

        <!-- CTA Button -->
        <a
          href="https://wa.me/56991629095?text=Hola,%20me%20interesa%20conocer%20más%20sobre%20los%20servicios%20de%20Lumina%20Consulting"
          target="_blank"
          class="btn-primary text-sm py-2.5 px-5"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
          {ctaText}
        </a>
      </div>

      <!-- Mobile: Language + Menu Button -->
      <div class="flex items-center gap-3 lg:hidden">
        <!-- Mobile Language Selector -->
        <a
          href={getAlternatePath()}
          class="p-2 text-sm font-medium hover:bg-lum-cream rounded transition-colors"
          title={isEnglish ? 'Cambiar a Español' : 'Switch to English'}
        >
          {isEnglish ? 'ES' : 'EN'}
        </a>

        <!-- Mobile Menu Button -->
        <button
          id="mobile-menu-button"
          class="p-2 border-2 border-lum-black hover:bg-lum-black hover:text-lum-cream transition-colors"
          aria-label={menuAriaLabel}
          aria-expanded="false"
        >
          <svg class="w-6 h-6 menu-open" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <svg class="w-6 h-6 menu-close hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </nav>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden lg:hidden">
      <div class="py-4 space-y-1 border-t-2 border-lum-black bg-lum-cream">
        {navLinks.map((link, index) => (
          <a
            href={link.href}
            target={link.external ? '_blank' : undefined}
            rel={link.external ? 'noopener noreferrer' : undefined}
            class:list={[
              'block px-4 py-3 font-body transition-colors border-l-4',
              currentPath === link.href
                ? 'border-lum-coral bg-lum-coral/5 text-lum-coral'
                : 'border-transparent hover:border-lum-mocha hover:bg-lum-ivory'
            ]}
          >
            {link.label}
            {link.external && (
              <svg class="inline-block w-3 h-3 ml-1 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            )}
          </a>
        ))}
        <div class="pt-4 px-4">
          <a
            href="https://wa.me/56991629095?text=Hola,%20me%20interesa%20conocer%20más%20sobre%20los%20servicios%20de%20Lumina%20Consulting"
            target="_blank"
            class="btn-primary w-full justify-center"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
            {ctaTextMobile}
          </a>
        </div>
      </div>
    </div>
  </div>
</header>

<!-- Spacer for fixed header -->
<div class="h-[88px]"></div>

<style>
  #main-header {
    background: rgba(245, 240, 235, 0.95);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
  }

  #main-header.scrolled {
    background: rgba(245, 240, 235, 0.98);
  }

  #main-header.scrolled nav {
    border-color: #E5DFD8;
  }
</style>

<script>
  // Mobile menu toggle
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');
  const menuOpen = button?.querySelector('.menu-open');
  const menuClose = button?.querySelector('.menu-close');

  button?.addEventListener('click', () => {
    const isOpen = !menu?.classList.contains('hidden');
    menu?.classList.toggle('hidden');
    menuOpen?.classList.toggle('hidden');
    menuClose?.classList.toggle('hidden');
    button.setAttribute('aria-expanded', String(!isOpen));
  });

  // Header scroll effect
  const header = document.getElementById('main-header');

  const handleScroll = () => {
    if (window.scrollY > 10) {
      header?.classList.add('scrolled');
    } else {
      header?.classList.remove('scrolled');
    }
  };

  window.addEventListener('scroll', handleScroll, { passive: true });
  handleScroll();
</script>
