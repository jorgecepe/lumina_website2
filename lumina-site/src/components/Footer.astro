          </li>
        </ul>
      </div>

      <!-- Services -->
      <div>
        <h4 class="font-display font-semibold text-white mb-6">Servicios</h4>
        <ul class="space-y-3">
          {services.map(service => (
            <li class="text-lumina-slate-light text-sm">{service}</li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h4 class="font-display font-semibold text-white mb-6">Contacto</h4>
        <ul class="space-y-4">
          <li>
            <a
              href="mailto:jcepeda@luminaconsulting.ai"
              class="text-lumina-slate-light hover:text-white transition-colors duration-200 text-sm flex items-start gap-3"
            >
              <svg class="w-5 h-5 flex-shrink-0 mt-0.5 text-lumina-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              jcepeda@luminaconsulting.ai
            </a>
          </li>
          <li>
            <a
              href="https://wa.me/56991629095"
              target="_blank"
              class="text-lumina-slate-light hover:text-white transition-colors duration-200 text-sm flex items-start gap-3"
            >
              <svg class="w-5 h-5 flex-shrink-0 mt-0.5 text-lumina-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              +56 9 9162 9095
            </a>
          </li>
          <li class="text-lumina-slate-light text-sm flex items-start gap-3">
            <svg class="w-5 h-5 flex-shrink-0 mt-0.5 text-lumina-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            Chile · Servicios remotos disponibles
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-white/10 pt-8">
      <div class="flex flex-col sm:flex-row justify-between items-center gap-4">
        <p class="text-lumina-slate-light text-sm">
          © {currentYear} Lumina Consulting. Todos los derechos reservados.
        </p>
        <div class="flex items-center gap-6 text-sm">
          <a href="/privacidad" class="text-lumina-slate-light hover:text-white transition-colors duration-200">
            Privacidad
          </a>
          <a href="/terminos" class="text-lumina-slate-light hover:text-white transition-colors duration-200">
            Términos
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>

