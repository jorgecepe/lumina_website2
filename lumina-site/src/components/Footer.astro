          </a>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="font-display font-semibold text-white mb-6">Enlaces</h4>
        <ul class="space-y-3">
          {quickLinks.map(link => (
            <li>
              <a
                href={link.href}
                class="text-lumina-slate-light hover:text-white transition-colors duration-200 text-sm"
              >
                {link.label}
              </a>
            </li>
          ))}
          <li>
            <a
              href="https://nodaltree.luminaconsulting.ai"
              target="_blank"
              rel="noopener noreferrer"
              class="text-lumina-slate-light hover:text-lumina-accent transition-colors duration-200 text-sm inline-flex items-center gap-1"
            >
              NodalTree
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
