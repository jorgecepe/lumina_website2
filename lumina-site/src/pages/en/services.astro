---
import Layout from '../../layouts/Layout.astro';

const services = [
  {
    slug: "strategic-dashboards",
    title: "Strategic Dashboards",
    description: "Dashboards that actually get used. Not just pretty charts: I help you define what to measure and how to act on the data.",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />`,
    highlights: ["Power BI", "Streamlit", "Strategic KPIs"]
  },
  {
    slug: "hr-analytics",
    title: "HR Analytics",
    description: "Turn HR data into decisions. Analysis of turnover, absenteeism, personnel costs, and talent metrics.",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />`,
    highlights: ["Turnover", "Absenteeism", "Labor costs"]
  },
  {
    slug: "reporting-automation",
    title: "Reporting Automation",
    description: "Stop wasting hours copying data from one place to another. We automate reports, consolidations, and repetitive processes.",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />`,
    highlights: ["Python", "Power Automate", "ETL"]
  },
  {
    slug: "competitive-analysis",
    title: "Competitive Analysis",
    description: "Monitor prices, products, and competitor moves without manual checking. Data scraping and automatic alerts.",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />`,
    highlights: ["Web scraping", "Alerts", "Comparative dashboard"]
  },
  {
    slug: "data-training",
    title: "Data Training",
    description: "Power BI, advanced Excel, and data analysis courses. Hands-on training with your real data.",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />`,
    highlights: ["Power BI", "Excel", "Corporate"]
  }
];
---

<Layout
  title="Business Intelligence and Data Services | Lumina Consulting"
  description="Strategic dashboards, HR Analytics, reporting automation, competitive analysis, and corporate training. Data consulting for SMEs."
  lang="en"
>
  <!-- Hero Section -->
  <section class="relative py-24 bg-lum-black overflow-hidden">
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute top-1/4 -right-32 w-96 h-96 bg-lum-coral/15 rounded-full blur-3xl" />
      <div class="absolute bottom-0 -left-32 w-96 h-96 bg-lum-coral/10 rounded-full blur-3xl" />
    </div>
    <div class="container-custom relative">
      <div class="max-w-4xl mx-auto text-center">
        <span class="badge bg-white/10 text-white border-white/20 mb-6">Services</span>
        <h1 class="text-white mb-6">How I Can Help You</h1>
        <p class="text-xl text-lum-slate-light max-w-2xl mx-auto">
          Practical, results-focused data consulting. No endless projects or unnecessary jargon. Solutions you can use from day one.
        </p>
      </div>
    </div>
  </section>

  <!-- Services Grid -->
  <section class="py-20 bg-white">
    <div class="container-custom">
      <div class="max-w-5xl mx-auto">
        <div class="grid md:grid-cols-2 gap-8">
          {services.map((service, index) => (
            <a
              href={`/en/services/${service.slug}`}
              class="group card hover:border-lum-coral/30 transition-all duration-300"
            >
              <div class="flex items-start gap-4 mb-4">
                <div class="icon-container flex-shrink-0">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={service.icon} />
                </div>
                <div>
                  <h2 class="text-xl font-semibold text-lum-black group-hover:text-lum-coral transition-colors">
                    {service.title}
                  </h2>
                </div>
              </div>
              <p class="text-lum-slate mb-4">
                {service.description}
              </p>
              <div class="flex flex-wrap gap-2 mb-4">
                {service.highlights.map(h => (
                  <span class="text-xs px-2 py-1 bg-lum-cream rounded">{h}</span>
                ))}
              </div>
              <span class="inline-flex items-center text-lum-coral font-medium text-sm group-hover:gap-2 transition-all">
                Learn more
                <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </span>
            </a>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- How I work -->
  <section class="py-20 bg-lum-cream">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-center mb-12">How I Work</h2>
        <div class="space-y-8">
          <div class="flex gap-6">
            <span class="w-10 h-10 rounded-full bg-lum-coral text-white flex-shrink-0 flex items-center justify-center font-semibold">1</span>
            <div>
              <h3 class="text-lg font-semibold mb-2">We Talk</h3>
              <p class="text-lum-slate">
                You tell me what problem you want to solve. No commitment, no endless PowerPoints. An honest conversation about whether I can help or not.
              </p>
            </div>
          </div>
          <div class="flex gap-6">
            <span class="w-10 h-10 rounded-full bg-lum-coral text-white flex-shrink-0 flex items-center justify-center font-semibold">2</span>
            <div>
              <h3 class="text-lg font-semibold mb-2">Diagnosis</h3>
              <p class="text-lum-slate">
                I review your data, processes, and context. I tell you what's realistic to achieve, how long it would take, and how much it would cost. If it doesn't make sense, I'll tell you that too.
              </p>
            </div>
          </div>
          <div class="flex gap-6">
            <span class="w-10 h-10 rounded-full bg-lum-coral text-white flex-shrink-0 flex items-center justify-center font-semibold">3</span>
            <div>
              <h3 class="text-lg font-semibold mb-2">Execution</h3>
              <p class="text-lum-slate">
                I work fast, with partial deliveries so you can start using things as soon as they're ready. No surprises or scope changes mid-project.
              </p>
            </div>
          </div>
          <div class="flex gap-6">
            <span class="w-10 h-10 rounded-full bg-lum-coral text-white flex-shrink-0 flex items-center justify-center font-semibold">4</span>
            <div>
              <h3 class="text-lg font-semibold mb-2">Knowledge Transfer</h3>
              <p class="text-lum-slate">
                I train you so you can maintain and evolve what we build. I'm not looking to create dependency.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-24 bg-lum-black relative overflow-hidden">
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute top-0 left-1/4 w-96 h-96 bg-lum-coral/10 rounded-full blur-3xl" />
      <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-lum-coral/10 rounded-full blur-3xl" />
    </div>
    <div class="container-custom relative">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-white mb-6">Not sure where to start?</h2>
        <p class="text-xl text-lum-slate-light mb-10">
          Tell me what problem you have and we'll figure out together if it makes sense to work on it.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="https://wa.me/56991629095?text=Hi,%20I'm%20interested%20in%20learning%20more%20about%20Lumina%20Consulting%20services"
            target="_blank"
            class="btn-primary"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
            Contact via WhatsApp
          </a>
          <a href="/en/contact" class="btn-secondary bg-white/5 border-white/20 text-white hover:bg-white/10">
            Schedule a Call
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
